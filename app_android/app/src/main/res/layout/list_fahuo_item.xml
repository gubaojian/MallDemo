<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="@dimen/dp_20"
      android:layout_marginEnd="@dimen/dp_20"
      android:background="@drawable/bg_order_item"
      android:paddingTop="@dimen/dp_10"
      android:paddingBottom="@dimen/dp_12"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp_20">
      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="车牌号"
          android:textColor="#ff333333"
          android:textSize="14sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/carNo"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:gravity="center_vertical"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="13sp"
          android:layout_marginStart="@dimen/dp_12"
          android:layout_marginEnd="44dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="驾驶员姓名"
          android:textColor="#ff333333"
          android:textSize="12sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/diverName"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="12sp"
          android:layout_marginStart="@dimen/dp_12"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="驾驶员手机"
          android:textColor="#ff333333"
          android:textSize="12sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/driverMobile"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="12sp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发货时间"
          android:textColor="#ff333333"
          android:textSize="12sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/fahuoTime"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="12sp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发货数量"
          android:textColor="#ff333333"
          android:textSize="12sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/fahuoAmount"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="12sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发货面积"
          android:textColor="#ff333333"
          android:textSize="12sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/fahuoArea"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="12sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发货比例"
          android:textColor="#ff333333"
          android:textSize="12sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/fahuoRate"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff999999"
          android:textSize="12sp"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedbackContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_12">
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#ECEBEB"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center"
          android:orientation="horizontal"
          android:background="@color/white"
          android:layout_marginHorizontal="@dimen/dp_20">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/feedbackButton">
          <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@mipmap/ic_shensu"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:textColor="#D34545"
              android:textSize="14sp"
              android:text="品质异常申诉"
              android:layout_marginStart="4dp"/>
        </LinearLayout>
      </LinearLayout>


    </LinearLayout>
  </LinearLayout>
  <TextView
      android:id="@+id/order_status"
      android:layout_width="59dp"
      android:layout_height="25dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="@dimen/dp_20"
      android:background="@mipmap/ic_order_wait_fahuo"
      android:layout_gravity="top|end"
      android:paddingStart="4dp"
      android:gravity="center"
      android:text="未发货"
      android:textColor="#ffffffff"
      android:textSize="12sp"/>
</FrameLayout>