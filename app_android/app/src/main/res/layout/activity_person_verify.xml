<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人实名认证"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/iv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂时不认证"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text="身份证照片"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                <FrameLayout
                    android:id="@+id/id_card_front_container"
                    android:layout_marginTop="10dp"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="@dimen/dp_150"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/id_card_front"
                        android:layout_width="@dimen/dp_240"
                        android:layout_height="@dimen/dp_150"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_id_card_front"/>
                    <TextView
                        android:id="@+id/id_card_front_text"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="上传身份证头像页"
                        android:layout_gravity="bottom"
                        android:textColor="#FFFFFF"
                        android:gravity="center"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/id_card_back_container"
                    android:layout_marginTop="10dp"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="@dimen/dp_150"
                    android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/id_card_back"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="@dimen/dp_150"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_id_card_back"/>
                    <TextView
                        android:id="@+id/id_card_back_text"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="上传身份证国徽页"
                        android:layout_gravity="bottom"
                        android:textColor="#FFFFFF"
                        android:gravity="center"/>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/id_card_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F9F9F9"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="姓名"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:textColor="#999999"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:inputType="text"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:background="#F9F9F9"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="身份证号"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editIdCardNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:textColor="#999999"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:inputType="text"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:background="#F9F9F9"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="联系地址"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入"
                        android:maxLines="2"
                        android:textColor="#999999"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:inputType="text"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:background="#F9F9F9"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/choose_company_type_container">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D34545"
                                android:textSize="14sp"
                                android:text="*"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:text="单位类别"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="10dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/choose_company_type_text"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="请输入"
                                android:singleLine="true"
                                android:textColor="#2f2f2f"
                                android:textColorHint="#999999"
                                android:textSize="14sp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@mipmap/choose_arrow_right"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#F9F9F9"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:background="@drawable/btn_common_solid_selector"
                    android:padding="7dp"
                    android:paddingTop="7dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="下一步"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
