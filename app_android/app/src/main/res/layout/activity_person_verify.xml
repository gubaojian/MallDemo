<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人实名认证"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/iv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂时不认证"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:text="身份证照片"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/id_card_front"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="@dimen/dp_150"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/goods_detai4"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/id_card_back"
                    android:layout_width="@dimen/dp_240"
                    android:layout_height="@dimen/dp_150"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/goods_detail5"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:id="@+id/id_card_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F9F9F9"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="姓名"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="张三"
                        android:singleLine="true"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#F9F9F9"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="身份证号"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="330***********1234"
                        android:singleLine="true"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#F9F9F9"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="联系地址"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="15dp"
                        android:text="浙江省杭州市西湖区文三路780号浙江省杭州市西湖区文三路780号浙江省杭州市西湖区文三路780号"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:background="@drawable/btn_common_solid_selector"
                    android:padding="7dp"
                    android:paddingTop="7dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="下一步"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
