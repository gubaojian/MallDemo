<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/top_bg"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <RelativeLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi，欢迎注册"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#0A121A"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/ic_register_phone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_input_rect_circle_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/editUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14sp"
                        android:inputType="phone"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/ic_register_pwd"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="密码"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_input_rect_circle_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/ic_register_verify_code"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="验证码"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_input_rect_circle_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/editVerifyCode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/get_verify_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:layout_marginStart="4dp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#57C248"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/ic_register_nick"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_input_rect_circle_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/editUserNick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:background="@drawable/btn_common_solid_selector"
                    android:padding="7dp"
                    android:paddingTop="7dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="注册"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/has_account_tip"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_80"
                    android:padding="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <CheckBox
                        android:id="@+id/cb_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/main_check"
                        />
                    <TextView
                        android:id="@+id/tv_protocol"
                        android:layout_marginStart="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
