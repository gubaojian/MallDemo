<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".ui.mine.MineFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/top_bg"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content">
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refresh_layout">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/container">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20">
                        <ImageView
                            android:id="@+id/renzheng_undone"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_26"
                            android:src="@mipmap/ic_renzheng_undone"/>
                        <ImageView
                            android:id="@+id/renzheng_done"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_26"
                            android:src="@mipmap/ic_renzheng_done"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/mine_avatar"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@mipmap/ic_user_default"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/white"
                            android:layout_marginStart="@dimen/dp_8"/>
                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:gravity="center_vertical"
                             android:layout_marginStart="@dimen/dp_20"
                             android:orientation="vertical">
                             <TextView
                                 android:id="@+id/userNick"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="用户昵称"
                                 android:textColor="#ff333333"
                                 android:textSize="18sp"
                                 android:textStyle="bold"
                                 android:layout_marginEnd="@dimen/dp_6"/>
                             <TextView
                                 android:id="@+id/userPhone"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="手机号：xxxxxxxxxxx"
                                 android:textColor="#ff333333"
                                 android:textSize="14sp"
                                 />
                         </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的订单数"
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/orderNum"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订购纸箱数量"
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/zhiXiangAmount"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="****"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单总面积"
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/orderArea"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="******"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单总金额"
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/totalMoney"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="******"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20">
                        <LinearLayout
                            android:id="@+id/notify_setting_container"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_mine_entry_item"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:src="@mipmap/ic_mine_notify_setting"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="通知设置"
                                    android:textColor="#ff333333"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_6"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/ic_mine_entry_arrow"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/notify_setting"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="全部开启"
                                android:textColor="#ff999999"
                                android:textSize="14sp"
                                android:maxLines="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/my_company_container"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@drawable/bg_mine_entry_item"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:src="@mipmap/ic_mine_company"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的企业"
                                    android:textColor="#ff333333"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_6"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/ic_mine_entry_arrow"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/companyAmount"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已添加 * 家企业"
                                android:textColor="#ff999999"
                                android:textSize="14sp"
                                android:maxLines="1"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20">
                        <LinearLayout
                            android:id="@+id/feedback_container"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_mine_entry_item"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:src="@mipmap/ic_mine_feedback"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="申诉记录"
                                    android:textColor="#ff333333"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_6"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/ic_mine_entry_arrow"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/feedbackDesc"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无记录"
                                android:textColor="#ff999999"
                                android:textSize="14sp"
                                android:maxLines="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/fabu_buy_container"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@drawable/bg_mine_entry_item"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:src="@mipmap/ic_mine_fabu_buy"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发布采购"
                                    android:textColor="#ff333333"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_6"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/ic_mine_entry_arrow"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/publishBuyDesc"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已发布 * 次采购"
                                android:textColor="#ff999999"
                                android:textSize="14sp"
                                android:maxLines="1"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/versionName"
                        android:text="版本号：1.0.0"
                        android:textColor="#ff999999"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="vertical"
                        android:gravity="center">
                        <Button
                            android:id="@+id/loginOut"
                            android:layout_width="135dp"
                            android:layout_height="42dp"
                            android:text="退出登录"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:background="@drawable/bg_white_button_ripple"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    </FrameLayout>

</FrameLayout>