<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="indicator">
        <attr name="indicatorNormalColor" format="color" />
        <attr name="indicatorSelectedColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="android:layout_height" />

        <attr name="tabPaddingVertical" format="dimension"/>
        <attr name="noDyeing" format="boolean"/>
        <attr name="noSelect" format="boolean"/>
        <attr name="focusBold" format="boolean"/>
        <attr name="iconPadding" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="focusColor" format="color"/>
        <attr name="normalColor" format="color"/>
        <attr name="tabClickBackground">
            <enum name="ripple" value="0"/>
            <enum name="rippleOutside" value="1"/>
            <enum name="gray" value="2"/>
            <enum name="empty" value="3"/>
        </attr>
        <attr name="paddingNavigationBar" format="boolean"/>
        <attr name="splitLine" format="reference"/>
        <attr name="unreadBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AspectRatioLayout">
        <attr name="arl_widthRatio" format="float" />
        <attr name="arl_heightRatio" format="float" />
    </declare-styleable>

</resources>
