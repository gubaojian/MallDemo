<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Mall" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="Theme.Login" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F9F9F9</item>
        <item name="colorPrimaryDark">#F9F9F9</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#F9F9F9</item>
    </style>

    <style name="Theme.Verify" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="Theme.White" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="Theme.Mall.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_46</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Theme.Mall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="navTabBar">
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#333333</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--没有选中的样式-->
    <style name="navTabBarNormalText">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--选中的样式-->
    <style name="navTabBarSelectedText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>